{% block navbar %}
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark" style=" background-color: #8088F6" id="NavBar">
        <a class="navbar-brand" href="{{ path('home') }}">
            <h1>Le Cerveau en Voyage</h1>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav nav-dropdown ml-auto" data-app-modern-menu="true">
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Je m'informe</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-white " href="#">Qui sommes-nous ?</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path('contact') }}">Contact</a>
                </li>
                <li class="nav-item btn btn-warning">
                    <a class="nav-link text-white" href="{{ path('don') }}">Je donne !</a>
                </li>

                {# CONNEXION/DÉCONNEXION #}

                {% if (is_granted("IS_AUTHENTICATED_REMEMBERED")) and (is_granted("ROLE_ADMIN")) %}
                    <li class="nav-item">
                        <a href="{{ path('fos_user_profile_show' ) }}" class="nav-link link text-white display-4">Bonjour {{ app.user.username }}
                            !</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('admin') }}" class="nav-link link text-white display-4">Administration</a>
                    </li>
                {% elseif is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li class="nav-item">
                        <a href="{{ path('user.username', {'username': app.user.username } ) }}"
                           class="nav-link link text-white display-4">
                            Bonjour {{ app.user.username }} !
                        </a>

                    </li>
                {% endif %}
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a href="{{ path('fos_user_security_logout') }}" class="nav-link link text-white display-4">Déconnexion</a>
                    </li>
                {% else %}

                {% endif %}
            </ul>

        </div>
    </nav>
{% endblock %}