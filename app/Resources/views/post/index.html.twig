{% block post %}
    <h1>L'Histoire du Moment</h1>

    {% for post in posts %}

        {{ post.title }}
        {{ post.content }}

        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div class="row">
                <div class="col-sm-6">
                    <a class="btn-primary" href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                </div>
                <div class="col-sm-6">
                    <a href="{{ path('post_new') }}">Changer l'histoire</a>
                </div>
            </div>

        {% endif %}


    {% endfor %}






{% endblock %}
