{% extends 'layout.html.twig' %}

{% block body %}
    <header class="header-area-blog overlay full-height-miniHeader relative v-center">
        <div class="absolute anlge-bg"></div>
        <div class="container">
            <div class="row v-center">
                <div class="col-xs-12 col-md-7 header-text-blog">
                    <h2>Je m'informe !</h2>
                    <h3>Consulter nos derniers articles</h3>
                </div>
            </div>
        </div>
    </header>

    <div class="col-xs-12 col-md-8">

        {% block article %}
        {% endblock %}

    </div>
    <div class="col-xs-12 col-md-4">
        {% block post %}
            {{ render(controller('CEVNewsBundle:PostContoller')) }}
        {% endblock %}
    </div>

{% endblock %}

