{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Editer l'article</h1>

    <div class="col-lg-12">
        <h2>Nouvelle article</h2>

        <div class="well">
            {{ form_start(form, {'attr': { 'class':'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.title, "Titre de l'article", {'label_attr' : { 'class' : 'col-lg-2 control-label'}}) }}
                {{ form_errors(form.title) }}
                <div class="col-lg-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.image, "Image", {'label_attr' : { 'class' : 'col-lg-2 control-label'}}) }}
                {{ form_errors(form.image) }}
                <div class="col-lg-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.content, "Contenu de l'article", {'label_attr' : { 'class' : 'col-lg-2 control-label'}}) }}
                {{ form_errors(form.content) }}
                <div class="col-lg-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.content, {'attr': {'class': 'ckeditor'}}) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <input class="btn" type="submit" value="Modifier l'article"/>
                </div>
                <div class="col-lg-6">

                    <a class="btn" href="{{ path('news') }}">Retour à la Liste d'article</a>
                </div>
            </div>
            {{ form_rest(form) }}

            {{ form_end(form) }}
        </div>


    </div>
{% endblock %}
